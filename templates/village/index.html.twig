{% extends 'base.html.twig' %}

{% block title %}Village index{% endblock %}

{% block body %}
    <h1>Village index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nomvillage</th>
                <th>Commune</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for village in villages %}
            <tr>
                <td>{{ village.id }}</td>
                <td>{{ village.nomvillage }}</td>
                <td>{{ village.commune }}</td>
                <td>
                    <a href="{{ path('village_show', {'id': village.id}) }}">show</a>
                    <a href="{{ path('village_edit', {'id': village.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('village_new') }}">Create new</a>
{% endblock %}
